import tkinter as tk
from tkinter import *
import os
from tkinter.filedialog import askdirectory
from PIL import Image, ImageTk
window = Tk()
window.geometry("950x500")
def ver_poblacion():
    #window.destroy()
    poblacion = Toplevel(window)
    poblacion.geometry("950x500")
    mensaje = Label(master=poblacion,text = "Aqui va a mostrar ya sea las 10 imagenes o que el usuario escoja cual ver",font=(None,10))
    mensaje.place(x=0,y=300)
def ver_fitness():
    #window.destroy()
    poblacion = Toplevel(window)
    poblacion.geometry("950x500")
    mensaje = Label(master=poblacion,text = "Aqui va a mostrar el resultado de la comparacion",font=(None,10))
    mensaje.place(x=0,y=300)
def ver_individuo():
    #window.destroy()
    poblacion = Toplevel(window)
    poblacion.geometry("950x500")
    mensaje = Label(master=poblacion,text = "Aqui se va a escoger una generacion y un individuo de esa generacion",font=(None,10))
    mensaje.place(x=0,y=300)
def crear_pantalla_inicio():
   
    button1 = tk.Button(text="Ver poblacion inicial",
                        width = 15,
                        height = 3,
                        bg = "green",
                        command=ver_poblacion)
    button1.place(x=30,y=350)
    button2 = tk.Button(text="Ver resultados del fitness",
                        width = 20,
                        height = 3,
                        bg = "green",
                        command=ver_fitness)
    button2.place(x=170,y=350)
    button3 = tk.Button(text="Ver individuo",
                        width = 15,
                        height = 3,
                        bg = "green",
                        command=ver_individuo)
    button3.place(x=340,y=350)
    button4 = tk.Button(text="Ver descendencia",
                        width = 15,
